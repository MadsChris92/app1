<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.MatchesPage">


    <StackLayout>
        <ListView x:Name="TeamList" 
                  ItemsSource="obsTeams" 
                  ItemTapped="ListViewItem_Tabbed"
                  VerticalOptions="FillAndExpand" 
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!--Team list-->
                        <StackLayout>
                            <Label Text="{Binding name}" />
                            
                            <!--Unfolding player list-->
                            <StackLayout IsVisible="{Binding IsVisible}">
                                <ListView ItemsSource="{Binding players}" 
                                          ItemTapped="PlayerItem_Tapped"
                                          HasUnevenRows="True"
                                          VerticalOptions="FillAndExpand"
                                          HeightRequest="100">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <StackLayout>
                                                    <Label Text="{Binding name}" 
                                                           TextColor="Blue"/>
                                                </StackLayout>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                
                                
                                <Button Text="View more"
                                        
                                        Clicked="Btn_Click_Show_Team"
                                        BackgroundColor="Transparent"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackLayout>
            <Button Clicked="Btn_Click_Load" Text="Load More"/>
        </StackLayout>

    </StackLayout>
    

        

</ContentPage>